[user]
	email = Tom.Weiss@TradingTechnologies.com
	name = Tom Weiss

[alias]
	st = status
	co = checkout
        br = branch
        dt = difftool
	glog = log --graph --date-order --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        myglog = log --graph --date-order --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --author=\"Tom Weiss\"
	serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git
[core]
	editor = emacs -nw
	excludesfile = ~/.gitignore_global

[diff]
        tool = meld

[difftool]
        prompt = false

[merge]
 #      tool = ediff This launches correctly, but crashes xming when I close emacs.
        conflictstyle = diff3
        tool = meld

 [mergetool "ediff"]
         cmd = ~/githome/ediff.sh $LOCAL $REMOTE $MERGED $BASE

[color]
	ui = true
